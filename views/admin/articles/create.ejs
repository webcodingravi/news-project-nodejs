<div id="admin-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="admin-heading">Add New Article</h1>
            </div>
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <h5 class="card-header">Add New Article</h5>
                    <div class="card-body">
                        <!-- Form -->
                        <form action="/admin/add-article" method="POST" enctype="multipart/form-data" id="form">
                            <div class="mb-3">
                                <label for="article_title" class="form-label">Title</label>
                                <input type="text" name="title" id="article_title" class="form-control"
                                    autocomplete="off" required placeholder="Title...">
                            </div>

                            <div class="mb-3">
                                <label for="short_desc" class="form-label">Short Description</label>
                                <textarea rows="4" name="short_desc" id="short_desc" class="form-control"
                                    autocomplete="off" placeholder="Short Description"></textarea>
                            </div>


                            <div class="mb-3">
                                <label for="summernote" class="form-label">Description</label>
                                <textarea name="content" id="summernote" class="form-control" rows="5"
                                    required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="article_category" class="form-label">Category</label>
                                <select name="category" id="article_category" class="form-control">
                                    <option disabled selected> Select Category</option>
                                    <% for(let category of categories) { %>
                                        <option value="<%=category.id %>">
                                            <%=category.name %>
                                        </option>

                                        <% } %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="article_image" class="form-label">Article image</label>
                                <input type="file" name="image" id="article_image" class="form-control">
                            </div>
                            <input type="submit" name="submit" class="btn btn-primary" value="Save" required />
                        </form>
                        <!--/Form -->
                        <!-- Error Message -->
                        <%- include('../partials/error') %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Summernote Lite JS -->
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.js"></script>
<!-- <script src="js/summernote-bs5.js"></script> -->
<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            placeholder: 'Start typing...',
            tabsize: 2,
            height: 200
        });
    });

    //Code to remove field "files" from the form
    document.querySelector('form').addEventListener("submit", function (event) {
        const unwantedField=document.querySelector('input[name="files"]');
        if (unwantedField) {
            unwantedField.remove()
        }
    })
</script>

<%- contentFor('summernoteCSS') %>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.css" rel="stylesheet">